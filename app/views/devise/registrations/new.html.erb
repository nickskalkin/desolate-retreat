<div class="row">
  <div class="col-md-4">

    <h2>Регистрация</h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name, osago_id: params[:osago_id])) do |f| %>
      <%= f.error_notification %>

      <%= f.input :email, required: true, autofocus: true %>
      <%= f.input :password, label: 'Пароль', required: true, hint: ("#{@minimum_password_length} символов минимум" if @minimum_password_length) %>
      <%= f.input :password_confirmation, label: 'Подтверждение пароля', required: true %>


      <%= f.button :submit, "Зарегистрироваться" %>

      <%= render "devise/shared/links" %>

    <% end %>
  </div>
</div>
